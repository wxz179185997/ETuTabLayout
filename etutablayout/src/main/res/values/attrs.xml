<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="ETuTabLayout">
        <attr name="icon_width" format="dimension"></attr>
        <attr name="icon_height" format="dimension"></attr>
        <attr name="icon_gravity" format="integer">
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
            <enum name="LEFT" value="2" />
            <enum name="RIGHT" value="3" />

        </attr>

        <attr name="icon_margin" format="dimension"></attr>
        <attr name="icon_visible" format="boolean"></attr>


        <attr name="text_selected_color" format="color"></attr>
        <attr name="text_size" format="dimension"></attr>
        <attr name="text_style" format="enum"></attr>
        <attr name="text_unselected_color" format="color"></attr>


        <attr name="indicator_color" format="color"></attr>
        <attr name="indicator_width" format="dimension"></attr>
        <attr name="indicator_height" format="dimension"></attr>
        <attr name="indicator_margin_top" format="dimension"></attr>
        <attr name="indicator_margin_left" format="dimension"></attr>
        <attr name="indicator_margin_bottom" format="dimension"></attr>
        <attr name="indicator_margin_right" format="dimension"></attr>
        <attr name="indicator_anim_duration" format="integer"></attr>

        <attr name="indicator_gravity" format="integer">
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
        </attr>

        <attr name="indicator_anim_enable" format="boolean"></attr>
        <attr name="indicator_corner_radius" format="dimension"></attr>
        <attr name="indicator_bounce_enable" format="boolean"></attr>

        <attr name="indicator_style" format="integer">
            <enum name="NORMAL" value="0" />
            <enum name="TRIANGLE" value="1" />
        </attr>

        <attr name="msg_color" format="color"></attr>
        <attr name="msg_text_color" format="color"></attr>
        <attr name="msg_text_size" format="dimension"></attr>
        <attr name="msg_text_max_number" format="integer"></attr>
        <attr name="msg_text_gravity" format="enum"></attr>


        <attr name="under_line_color" format="color"></attr>
        <attr name="under_line_height" format="dimension"></attr>
        <attr name="under_line_width" format="dimension"></attr>
        <attr name="under_line_gravity" format="integer">
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
        </attr>

        <attr name="divideer_color" format="color"></attr>
        <attr name="divider_width" format="dimension"></attr>
        <attr name="divider_padding" format="dimension"></attr>

        <attr name="space_equal" format="boolean"></attr>
        <attr name="tab_width" format="dimension"></attr>
        <attr name="tab_padding" format="dimension"></attr>


        <attr name="tab_bg_color" format="color"></attr>

    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="bg_color" format="color"></attr>
        <attr name="corner_radius" format="dimension"></attr>
        <attr name="stroke_width" format="dimension"></attr>
        <attr name="stroke_color" format="color"></attr>
        <attr name="is_radius_halfheight" format="boolean"></attr>
        <attr name="is_width_heightEqual" format="boolean"></attr>

    </declare-styleable>

</resources>